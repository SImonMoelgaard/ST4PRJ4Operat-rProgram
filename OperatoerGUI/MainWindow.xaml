<Window x:Class="OperatoerGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid Background="White">
        <wpf:CartesianChart AnimationsSpeed="0:0:0.5" Hoverable="False" DataTooltip="{x:Null}" Name="MeasurementChart" Margin="269,184,10,21">

            <wpf:CartesianChart.Series>
                <wpf:LineSeries Values="{Binding ChartValues}" 
                                PointGeometry="{x:Null}"
                                Fill="Transparent"
                                Stroke="Red" Height="3" RenderTransformOrigin="0.5,0.5" Width="33">
                    <wpf:LineSeries.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="-1"/>
                            <SkewTransform/>
                            <RotateTransform/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </wpf:LineSeries.RenderTransform>
                </wpf:LineSeries>
            </wpf:CartesianChart.Series>
            <wpf:CartesianChart.AxisX>

                <wpf:Axis LabelFormatter="{Binding DateTimeFormatter}" 
                          MaxValue="{Binding XAxisMax}" 
                          MinValue="{Binding XAxisMin}"
                          Unit="{Binding AxisUnit}"
                          Foreground="Black">
                    <wpf:Axis.Separator>
                        <wpf:Separator Step="{Binding AxisStep}" Stroke="Black"/>

                    </wpf:Axis.Separator>
                </wpf:Axis>
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.AxisY>
                <wpf:Axis MinValue="50" MaxValue="200">
                    <wpf:Axis.Separator>
                        <wpf:Separator Stroke="Black"/>

                    </wpf:Axis.Separator>
                </wpf:Axis>
            </wpf:CartesianChart.AxisY>
        </wpf:CartesianChart>
        <Rectangle HorizontalAlignment="Left" Height="36" Stroke="Black" VerticalAlignment="Top" Width="338" Margin="-86,0,0,0"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="55,8,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="100,8,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="145,8,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="191,8,0,0" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Left" Height="148" Margin="0,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="252"/>
        <TextBox HorizontalAlignment="Left" Margin="54,53,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="157"/>
        <TextBox HorizontalAlignment="Left" Margin="55,76,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="156"/>
        <TextBox HorizontalAlignment="Left" Margin="55,99,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="156"/>
        <TextBox HorizontalAlignment="Left" Margin="55,122,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="156"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="26,49,0,0" VerticalAlignment="Top"/>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="8,72,0,0" VerticalAlignment="Top"/>
        <Label Content="Type:" HorizontalAlignment="Left" Margin="15,94,0,0" VerticalAlignment="Top"/>
        <Label Content="Time:" HorizontalAlignment="Left" Margin="15,114,0,0" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Left" Height="231" Margin="0,184,0,0" Stroke="Black" VerticalAlignment="Top" Width="252"/>
        <Rectangle HorizontalAlignment="Center" Height="14" Margin="0,418,0,0" Stroke="Black" VerticalAlignment="Top" Width="800"/>
        <Label Content="Scale:" HorizontalAlignment="Left" Margin="14,217,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ScaleUp_b" Content="Button" HorizontalAlignment="Left" Margin="63,223,0,0" VerticalAlignment="Top" Click="ScaleUp_b_Click"/>
        <Button x:Name="ScaleDown_b" Content="Button" HorizontalAlignment="Left" Margin="63,248,0,0" VerticalAlignment="Top" Click="ScaleDown_b_Click"/>
        <Label Content="X cm" HorizontalAlignment="Left" Margin="14,240,0,0" VerticalAlignment="Top"/>
        <Label Content="Adjust Baseline:" HorizontalAlignment="Left" Margin="17,287,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="145,293,0,0" VerticalAlignment="Top" Width="56"/>
        <Label Content="Adjust Gating values:" HorizontalAlignment="Left" Margin="17,313,0,0" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="145,319,0,0" VerticalAlignment="Top" Width="56"/>
        <TextBox HorizontalAlignment="Left" Margin="145,366,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="56"/>
        <Label Content="Radiation time left:" HorizontalAlignment="Left" Margin="17,362,0,0" VerticalAlignment="Top"/>
        <Rectangle HorizontalAlignment="Left" Height="169" Margin="269,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="521"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="52,150,0,0" VerticalAlignment="Top" Width="58"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="156,150,0,0" VerticalAlignment="Top" Width="55"/>
    </Grid>
</Window>